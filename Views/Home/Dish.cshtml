@{
    @* string a= ViewBag.Dish.Name; *@
    ViewData["Title"] = ViewBag.Dish.Name;
}

<div class="container">
    <div class="col">
        <div class="d-flex flex-column align-items-center border-bottom">
            <a class="align-self-start" href="/">Home</a>
            <h1>@ViewBag.Dish.Name</h1>
            <p>@ViewBag.Dish.Chef</p>
        </div>
        <div class="col">
            <p>@ViewBag.Dish.Description</p>
            <p><b>Calories:</b> @ViewBag.Dish.Calories</p>
            <p><b>Tastiness:</b> @ViewBag.Dish.Tastiness</p>
        </div>
        <div class="row justify-content-around">
            <a href="/@ViewBag.Dish.DishId/delete" class="btn btn-danger text-white">Delete</a>
            <a href="/edit/@ViewBag.Dish.DishId"class="btn btn-success text-white">Edit</a>
        </div>
    </div>
</div>